<resources>

    <!-- Action Bar -->
    <style name="fortune_toolbar.Expanded" parent="fortune_toolbar.Collapsed">
        <item name="android:textSize">42dp</item>
        <item name="android:textColor">@color/settingslib_text_color_primary_device_default</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <style name="fortune_toolbar.Collapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:fontFamily">@string/settingslib_config_headlineFontFamily</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/settingslib_text_color_primary_device_default</item>
    </style>

    <!-- Preference -->
    <style name="fortune_text_primary">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
    </style>

    <style name="fortune_text_secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="fortune_text_primary_medium">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <!-- Dashboard Style -->
    <style name="fortune_dashboard_header_title" parent="CollapsingToolbarTitle.Expanded">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">142dp</item>
        <item name="android:layout_marginBottom">@dimen/homepage_title_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/homepage_title_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/fortune_toolbar_expanded_title_margin_end</item>
        <item name="android:fontFamily">google-sans-bold</item>
    </style>

    <!-- Clock -->
    <style name="fortune_clock">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/fortune_clock_color</item>
        <item name="android:fontFamily">google-sans</item>
        <item name="android:fontFeatureSettings">tnum, cv03, cv04</item>
    </style>

</resources>
